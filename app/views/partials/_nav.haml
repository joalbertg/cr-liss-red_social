%header.mdl-layout__header.mdl-layout__header--scroll
  .mdl-layout__header-row
    / Title 
    %span.mdl-layout-title= link_to("Red Social", root_path, class: "white-text", style:"text-decoration:none;")
    / Add spacer, to align navigation to the right 
    .mdl-layout-spacer
    / Navigation
    %nav.mdl-navigation.relative
      -if user_signed_in?
        #notifications
        .right-space
          = link_to '/notifications', class:'circle red white-text', id:'notification', remote: true, data: { type: 'script'} do
            = current_user.unviewed_notifications_count
        = link_to("Mis amigos", friendships_path, class: "white-text right-space")
        = link_to(current_user.username, current_user, class: "white-text right-space")
        = link_to("Cerrar sesi√≥n", destroy_user_session_path, method: :delete, class: "white-text")

.mdl-layout__drawer
  %span.mdl-layout-title Red Social
  %nav.mdl-navigation
